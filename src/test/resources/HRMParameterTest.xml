<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="HRM application Suite">
<parameter name ="url" value="https://opensource-demo.orangehrmlive.com/"/>
<parameter name="username" value="Admin"/>
<parameter name="password" value="admin123"/>

	<test name="OrangeHRMLogin">
      <parameter name="browserName" value="chrome"/>
		<classes>
			<class name="com.hyr.test.OrangeHRMParameterTest">
            <methods>
					<include name="launchApp"/>
					<include name="enterLoginDetails"/>
					<include name="verifyLogin"/>
				</methods>
			</class>
		</classes>
	</test>

   <test name="OrangeHRMInfo">
     <parameter name="browserName" value="firefox"/>
		<classes>
			<class name="com.hyr.test.OrangeHRMParameterTest">
				<methods>
					<include name="launchApp" />
                    <include name="enterLoginDetails" />
					<include name="navigateToMyInfo" />
					<include name="verifyMyInfo" />
				</methods>
			</class>
		</classes>
	</test>

	
</suite>